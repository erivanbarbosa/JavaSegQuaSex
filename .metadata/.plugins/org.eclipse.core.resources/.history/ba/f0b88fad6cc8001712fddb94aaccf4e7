import java.util.Scanner;

public class Calculadora {
	public static void main(String[] args ) {
		int numero1;
		int numero2;
		
		Scanner input = new Scanner(System.in);
		
		System.out.println("Digite o primeiro numero: ");
		numero1 = input.nextInt();
		
		System.out.println("Digite o segundo numero: ");
		numero2 = input.nextInt();

		
		System.out.printf("A soma do numero 1 com o numero 2 é ");
		System.out.println(numero1 + numero2);
		System.out.printf("A subtração do numero 1 pelo numero 2 é ", numero1 - numero2 );
		System.out.println(numero1 - numero2);
		System.out.printf("A multiplicação de numero 1 pelo numero 2 é ", numero1 * numero2);
		System.out.println(numero1 * numero2);
		System.out.printf("A divisão do numero 1 pelo numero 2 é ", numero1 / numero2);
		System.out.println(numero1 / numero2);
		
	}
}
